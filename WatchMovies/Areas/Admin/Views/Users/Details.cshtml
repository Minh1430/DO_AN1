@model WatchMovies.Models.User

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary rounded h-100 p-4">
        <h2 class="text-primary">Chi tiết user</h2>
        <hr />
        <dl class="dl-horizontal">
            <dt class="text-white">
                @Html.DisplayNameFor(model => model.Ten)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Ten)
            </dd>

            <dt class="text-white">
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="text-white">
                @Html.DisplayNameFor(model => model.Password)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Password)
            </dd>

        </dl>
    </div>
</div>
<div class="container-fluid pt-4 px-4">
    <p>
        <a class="btn btn-sm btn-warning" href="@Url.Action("Edit","Users", new {id=Model.MaUser})">Sửa</a> |
        <a class="btn btn-sm btn-primary" href="@Url.Action("Index","Users", new {id=Model.MaUser})">Quay lại</a>
    </p>
</div>
