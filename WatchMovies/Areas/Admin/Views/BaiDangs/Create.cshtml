@model WatchMovies.Models.BaiDang

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <h2 class="text-primary">Thêm bài đăng</h2>
    <div class="bg-secondary rounded h-100 p-4">
        @using (Html.BeginForm("Create", "BaiDangs", new { area = "Admin" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div>
                <h4 class="mb-4">Bài đăng</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row mb-3">
                    @Html.LabelFor(model => model.Ten, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    @Html.LabelFor(model => model.NoiDung, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-md-10">
                        <div class="form-floating">
                            <textarea name="NoiDung" id="NoiDung" class="form-control" style="height: 250px;"></textarea>
                        </div>
                        @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
                    </div>
                    
                </div>

                <div class="row mb-3">
                    @Html.LabelFor(model => model.HinhAnh, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-md-10">
                        <input type="file" name="hinhAnhFile" class="form-control" onchange="loadFile(event)" />
                    </div>
                </div>

                <div class="row mb-3">
                    @Html.LabelFor(model => model.DaoDien, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DaoDien, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DaoDien, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    @Html.LabelFor(model => model.DienVien, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DienVien, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DienVien, "", new { @class = "text-danger" })
                    </div>
                </div>

                @*<div class="row mb-3">
                    @Html.LabelFor(model => model.MaUserTao, "MaUserTao", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.DropDownList("MaUserTao", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaUserTao, "", new { @class = "text-danger" })
                    </div>
                </div>*@

                @*<div class="row mb-3">
                    @Html.LabelFor(model => model.NgayTao, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NgayTao, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NgayTao, "", new { @class = "text-danger" })
                    </div>
                </div>*@

            <div class="row mb-3">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm" class="btn btn-success" />
                </div>
            </div>
            </div>
        }
    </div>
</div>

<div class="container-fluid pt-4 px-4">
    <div>
        @Html.ActionLink("Quay lại", "Index", null, htmlAttributes: new { @class = "btn btn-primary" })
    </div>
</div>
@*Tải lại ảnh khi thay đổi trong input*@
<script>
    var loadFile = function (event) {
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
    }
</script>
