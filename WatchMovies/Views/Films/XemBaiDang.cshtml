
@{
    ViewBag.Title = "XemBaiDang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- catalog -->
<section class="home">
    <div class="catalog">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    var path = "~/Content/img/post/" + item.HinhAnh;
                    <!-- card -->
                    <div class="col-6 col-sm-12 col-lg-6">
                        <div class="card card--list">
                            <div class="row">
                                <div class="col-12 col-sm-4">
                                    <div class="card__cover">
                                        <img src="@Url.Content(path)" alt="">
                                        <a href="@Url.Action("XemChiTietBaiDang","Films",new {id=item.MaBaiDang})" class="card__play">
                                            <i class="icon ion-ios-play"></i>
                                        </a>
                                    </div>
                                </div>

                                <div class="col-12 col-sm-8">
                                    <div class="card__content">
                                        <h3 class="card__title"><a href="@Url.Action("XemChiTietBaiDang","Films",new {id=item.MaBaiDang})">@item.Ten</a></h3>
                                        <span class="card__category">
                                            <a href="#">@item.DaoDien</a>
                                        </span>
                                        <div class="card__description">
                                            <p>@item.NoiDung</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end card -->
                }
