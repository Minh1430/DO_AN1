@{
    ViewBag.Title = "Home Page";
}

<section class="home">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="home__title">PHIM THỊNH HÀNH</h1>

                <button class="home__nav home__nav--prev" type="button">
                    <i class="icon ion-ios-arrow-round-back"></i>
                </button>
                <button class="home__nav home__nav--next" type="button">
                    <i class="icon ion-ios-arrow-round-forward"></i>
                </button>
            </div>

            <div class="col-12">
                <div class="owl-carousel home__carousel">
                    @foreach (var item in ViewBag.hot)
                    {
                        var path = "~/Content/img/film/" + item.HinhAnh;
                        <div class="item">
                            <!-- card -->
                            <div class="card card--big">
                                <div class="card__cover">
                                    <img src="@Url.Content(path)" alt="">
                                    <a href="@Url.Action("details","Films",new {id=item.MaPhim})" class="card__play">
                                        <i class="icon ion-ios-play"></i>
                                    </a>
                                </div>
                                <div class="card__content">
                                    <h3 class="card__title"><a href="@Url.Action("details","Films",new {id=item.MaPhim})">@item.Ten</a></h3>
                                    <span class="card__category">
                                        @foreach (var i in item.TheLoai_Phims)
                                        {
                                            var url = "/TheLoai/" + i.MaTheLoai;
                                            <a href="@url">@i.TheLoai.Ten</a>
                                        }
                                    </span>
                                    <span class="card__rate"><i class="icon ion-ios-star"></i>@item.SoSao</span>
                                </div>
                            </div>
                            <!-- end card -->
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- content -->
    <section class="content">
        <div class="content__head">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <!-- content title -->
                        <h2 class="content__title">PHIM MỚI</h2>
                        <!-- end content title -->
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        var path = "~/Content/img/film/" + item.HinhAnh;
                        <!-- card -->
                        <div class="col-6 col-sm-4 col-lg-3 col-xl-2">
                            <div class="card">
                                <div class="card__cover">
                                    <img src="@Url.Content(path)" alt="">
                                    <a href="@Url.Action("details","Films",new {id=item.MaPhim})" class="card__play">
                                        <i class="icon ion-ios-play"></i>
                                    </a>
                                </div>
                                <div class="card__content">
                                    <h3 class="card__title"><a href="@Url.Action("details","Films",new {id=item.MaPhim})">@item.Ten</a></h3>
                                    <span class="card__category">
                                        @foreach (var i in item.TheLoai_Phims)
                                        {
                                            var url = "/TheLoai/" + i.MaTheLoai;
                                            <a href="@url">@i.TheLoai.Ten</a>
                                        }
                                    </span>
                                    <span class="card__rate"><i class="icon ion-ios-star"></i>@item.SoSao</span>
                                </div>
                            </div>
                        </div>
                        <!-- end card -->
                    }
                </div>
            </div>
        </div>
    </section>
</section>
    <!-- end content -->
